<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="hans49" params="prefix">
      <link name="${prefix}motor1_link">
        <inertial>
          <origin rpy="0 0 0" xyz="8.625E-08 -4.6583E-06 0.03145"/>
          <mass value="5.8"/>
          <inertia ixx="0.10105893" ixy="0.000211" ixz="-0.004" iyy="0.09386624" iyz="-0.01698537" izz="0.01449937"/>
        </inertial>
        <visual>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <geometry>
            <mesh filename="package://hans_t49_description/meshes/HANS_T49.dae" scale="0.001 0.001 0.001"/>
          </geometry>
          <material name="Gazebo/White">
            <color rgba="0. 0. 0. 1"/>
          </material>
        </visual>
        <collision>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <geometry>
            <mesh filename="package://hans_t49_description/meshes/HANS_T49.dae" scale="0.001 0.001 0.001"/>
          </geometry>
        </collision>
      </link>
      <gazebo reference="${prefix}motor1_link">
        <material>Gazebo/White</material>
        <selfCollide>True</selfCollide>
      </gazebo>

      <link name="${prefix}motor1_cover">
        <inertial>
          <origin rpy="0 0 0" xyz="8.625E-08 -4.6583E-06 0.03145"/>
          <mass value="5.8"/>
          <inertia ixx="0.10105893" ixy="0.000211" ixz="-0.004" iyy="0.09386624" iyz="-0.01698537" izz="0.01449937"/>
        </inertial>
        <visual>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <geometry>
            <mesh filename="package://hans_t49_description/meshes/HANS_T49_Black.dae" scale="0.001 0.001 0.001"/>
          </geometry>
          <material name="Gazebo/Black">
            <color rgba="0. 0. 0. 1"/>
          </material>
        </visual>
        <collision>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <geometry>
            <mesh filename="package://hans_t49_description/meshes/HANS_T49_Black.dae" scale="0.001 0.001 0.001"/>
          </geometry>
        </collision>
      </link>
      <gazebo reference="${prefix}motor1_cover">
        <material>Gazebo/Black</material>
        <selfCollide>True</selfCollide>
      </gazebo>
      <link name="dummy_link1">
        <inertial>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <mass value="0.01"/>
          <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
             <box size="0.02 0.1 0.02"/>
          </geometry>
          <material name="metal"/>
        </visual>
        <collision>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
             <box size="0.02 0.1 0.02"/>
          </geometry>
        </collision>
      </link>

      <link name="dummy_link2">
        <inertial>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <mass value="0.01"/>
          <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
             <box size="0.1 0.02 0.02"/>
          </geometry>
          <material name="metal"/>
        </visual>
        <collision>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
             <box size="0.1 0.02 0.02"/>
          </geometry>
        </collision>
      </link>

      <joint name="motor1" type="revolute">
        <origin rpy="0 -1.5708 0" xyz="0.109255 0 0.16074"/>
        <parent link="motor1_link" />
        <child link="dummy_link1" />
        <axis xyz="0 0 1" />
        <limit lower="-3.14" upper="3.14" effort="34" velocity="1.57" />
      </joint>

      <joint name="motor2" type="revolute">
        <origin rpy="1.5708 0 0" xyz="0 0 0"/>
        <parent link="motor1_link" />
        <child link="dummy_link2" />
        <axis xyz="0 1 0" />
        <limit lower="-3.14" upper="3.14" effort="34" velocity="1.57" />
      </joint>
      <joint name="${prefix}motor1_cover_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0.0"/>
        <parent link="${prefix}motor1_link"/>
        <child link="${prefix}motor1_cover"/>
      </joint>
      <gazebo>
        <plugin name="mara_joint_state" filename="libgazebo_ros_joint_state_publisher.so">
          <ros>
            <argument>~/out:=joint_states</argument>
          </ros>
          <update_rate>25</update_rate>
          <joint_name>motor1</joint_name>
          <joint_name>motor2</joint_name>
        </plugin>
        <plugin name="hrim_actuation_servomotor_000000000001" filename="libmara_gazebo_joint_plugin.so">
          <ros></ros>
          <axis1>motor2</axis1>
          <axis2>motor1</axis2>
          <type>series20</type>
        </plugin>
      </gazebo>
  </xacro:macro>
</robot>
